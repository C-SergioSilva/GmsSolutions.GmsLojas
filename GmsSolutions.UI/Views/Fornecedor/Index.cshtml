@model IEnumerable<GmsSolutions.Entities.Fornecedor>

@{
    ViewBag.Title = "Index";
}

<h3>Relação de Fornecedores</h3>

<p>
    @Html.ActionLink("Novo Fornecedor", "Cadastrar", new { }, new { @Class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayName("Descriçao do Produto")
        </th>
        <th>
            @Html.DisplayName("Quantidade")
        </th>
        <th>
            @Html.DisplayName("Valor da compra")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contato)
        </th>
        <th>
            @Html.DisplayName("Data da Compra")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescProduto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QdeCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contato)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCompra)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }, new {@class = "btn btn-success" } ) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.Id },new { @class="btn btn-info" } ) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id }, new { @class=" btn btn-danger "  })
        </td>
    </tr>
}

</table>
