@model  GmsSolutions.UI.Models.UserView

@{
    ViewBag.Title = "Roles";
}

<h4>Configurações de Permissões - Usuário - @Model.Nome</h4>

<p>
    @Html.ActionLink("Nova Permissão", "AddRoles", new { userId = Model.UserId }, new { @class = "btn btn-primary" })
</p>
<table class="table">

   @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <tr> 
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Name)
            </td>

            <td>
                @Html.ActionLink("Excluir", "Delete", new { userId = Model.UserId, roleId = Model.Roles[i].RoleId }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-info" }) 
            </td>
        </tr>
    }

</table>