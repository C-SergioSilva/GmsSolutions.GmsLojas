@model IEnumerable<GmsSolutions.Entities.Usuario>

@{
    ViewBag.Title = "Lista de Usuários";
}
<h3> Relação dos Usuários ! </h3>
<p>
    @Html.ActionLink("Novo Usuário", "Cadastrar", new { }, new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
     {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Id },new {@class="btn btn-success" }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id },new {@class="btn btn-info" }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id },new {@class="btn btn-danger" })
            </td>
        </tr>
     }

</table>
