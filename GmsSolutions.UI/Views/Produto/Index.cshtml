@model IEnumerable<GmsSolutions.Entities.Produto>

@{
    ViewBag.Title = "Lista de Compras de Produtos ";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Produto", "Cadastrar" ,new { }, new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayName("Data da Compra")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estoque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fornecedor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UltimaCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estoque)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fornecedor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id },new {@class="btn btn-success" }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.Id },new {@class="btn btn-info" }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id },new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
